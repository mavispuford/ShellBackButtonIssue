<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="ShellBackButtonIssue.Pages.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="2"
            VerticalOptions="Start">

            <Button Text="Go to other page"
                    Clicked="Button_OnClicked"
                    HorizontalOptions="Start" />

            <Label Padding="10,0" Text="Button is close to the top to make it easier to quickly click the back button" HorizontalOptions="Start" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>